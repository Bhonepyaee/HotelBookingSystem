@{
    ViewData["Title"] = "Create Blog Page";
}
<div class="container mt-3">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="text-center">Create Blog</h3>
                </div>
                <div class="card-body">
                    <form action="/BlogEFCore/SaveAsync" method="post">
                        <label for="UserName">Blog Title</label>
                        <input type="text" class="form-control" name="BlogTitle" required />
                        <br />
                        <label for="UserName">Blog Author</label>
                        <input type="text" class="form-control" name="BlogAuthor" required />
                        <br />
                        <label for="UserName">Blog Content</label>
                        <input type="text" class="form-control" name="BlogContent" required />
                        <br />
                        <button class="btn btn-outline-primary float-end">Save</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>